# Simple, given a string of words, 
# return the length of the shortest word(s).
# String will never be empty and you do not 
# need to account for different data types.

def find_short(s):
    # your code here
    words = s.split()
    l = len(words[0])
    
    for word in words:
        if len(word) < l:
            l = len(word)
    
    return l # l: shortest word length
    
# testCase
print(find_short("lets talk about javascript the best language"))          #3
print(find_short("i want to travel the world writing code one day"))    #1
print(find_short("Lets all go on holiday somewhere very cold"))         #2

